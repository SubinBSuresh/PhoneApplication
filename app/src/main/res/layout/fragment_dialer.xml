<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DialerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewContactSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="3"
            tools:listitem="@layout/recycler_view_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tecxtViewuserEnteredNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="TextView" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabBackSpaceNumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/checkbox_on_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDialOne"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="1" />

            <Button
                android:id="@+id/buttonDialTwo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="2" />

            <Button
                android:id="@+id/buttonDialThree"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDialfour"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="4" />

            <Button
                android:id="@+id/buttonDialFive"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="5" />

            <Button
                android:id="@+id/buttonDialSix"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDialSeven"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="7" />

            <Button
                android:id="@+id/buttonDialEight"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="8" />

            <Button
                android:id="@+id/buttonDialNine"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDialStar"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="*" />

            <Button
                android:id="@+id/buttonDialZero"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="0" />

            <Button
                android:id="@+id/buttonDialhash"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:text="#" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMakeCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@android:drawable/stat_sys_phone_call" />

    </LinearLayout>
</FrameLayout>